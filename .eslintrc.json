{
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true,
			"classes": true
		}
	},
	"rules": {
		"semi": "error"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"plugins": ["@babel"]
}